<div class="container-fluid fadedimage" style="height: 100vh; width: 100%;">
</div>
<div class="container">
  <div class="row">
     <div class="col-md-4 mx-auto" style="color: red;">
      <% if @applicant.errors.any? %>
    <ul>
    <% @applicant.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  <% end %>
     </div>
  </div>
</div>
<div class ="form-box" style="margin-top:-250px;">
  <h1>Apply for this job</h1>
<%= form_with(model: [@job, @job.applicants.build]) do |form| %>
  <div class="form-group" >
    <%= form.label :Applicant_Name %><br>
    <%= form.text_field :name ,{:class => 'form-control'}%>
  </div>
  <div class="form-group" >
    <%= form.label :email %><br>
    <%= form.text_field :email ,{:class => 'form-control'}%>
  </div>
  <div class="form-group">
    <%= form.label :qualification %><br>
    <%= form.text_field :qualification,{:class => 'form-control'} %>
  </div>

  <div class="form-group">
    <%= form.label :salaryexpected %><br>
    <%= form.text_field :salary,{:class => 'form-control'}%>
  </div>
  <div class="form-group">
    <%= form.label :skills %><br>
    <%= form.text_field :skills,{:class => 'form-control'} %>
  </div>
   <div class="form-group">
    <%= form.label :experience %><br>
    <%= form.text_field :experience,{:class => 'form-control'} %>
  </div>
  <div class="form-group">
    <%= form.label :Mobile_Number %><br>
    <%= form.text_field :phonenumber,{:class => 'form-control'} %>
  </div>
  <div class="form-group">
    <%= form.label :Upload_Resume %><br>
    <%= form.file_field :avatar,{:class => 'form-control'} %>
  </div>
  <div>
    <%= form.submit %>
  </div>
<% end %>
</div>
