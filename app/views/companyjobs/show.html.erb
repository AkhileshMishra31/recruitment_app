<%# end %>

<ul>
  <% if current_user == @job.user %>
  <li><%= link_to "Edit", edit_companyjob_path(@job) , class:'btn btn-primary' %></li>
  <li><%= link_to "Destroy", companyjob_path(@job),class:'btn btn-primary', data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  } %></li>   
  <% end %>        
</ul>