
<div class="container">
    <div class="row mx-2 my-2">
      <div class="col-md-8">
        <h1 class="text-center">we are hiring for  <%= @job.name %>  developer</h1>
      </div>
    </div>
     <div class="row my-2">
      <div class="col-md-2">
        <%= image_tag @job.avatar if @job.avatar.attached? %>
      </div>
      <div class="col-md-10">
        satna,m.p 
      </div>
      <div class="col-md-4 my-3">
       post date :12/1/2000
      </div>
    </div>
    <div class="row my-4">
      <div class="col-10">
        <h3>descriptions of job </h3>
       <ul class="list-group list-group-flush">
            <li class="list-group-item">An item</li>
            <li class="list-group-item">A second item</li>
            <li class="list-group-item">A third item</li>
            <li class="list-group-item">A fourth item</li>
            <li class="list-group-item">And a fifth one</li>
      </ul>
      </div>
    </div>
    <div class="row my-4">
      <div class="col-10 my-2">
        <h3>experience required:-</h1>
      </div>
      <div class="col-3">
        <p><%= @job.experience %> years</p>
      </div>
    </div>
    <div class="row my-4">
      <div class="col-10 my-2">
        <h3>qualificatios:-</h1>
      </div>
      <div class="col-3">
        <p><%= @job.qualification %></p>
      </div>
    </div>
    <div class="row mx-2 my-2">
      <div class="col-md-6">
       <!-- <button type="button" class="btn btn-primary">apply for job</button> -->
       <%= link_to "Apply", new_companyjob_applicant_path(@job), class:'btn btn-primary'%>
      </div>
    </div>
</div>


