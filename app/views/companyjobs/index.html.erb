<h1 class="text-center my-4">available jobs <%= @jobs.count %></h1>
<div class="container">
  <div class="row">
    <% if current_user &&  @role == "Company"%>
     <%= link_to "create job",  new_companyjob_path  , class:'btn btn-primary w-50 text-center my-4'%> 
    <% end %>
    </div>
  </div>
<ul>
  <%@jobs.each do |job| %>
  <div class="container">
  <div class="row">
    <div class="card">
        <div class="card-header">
         <h6><%= time_ago_in_words job.created_at %></h6>
          Featured Jobs created by <%= job.user.email if current_user %>
        </div>
        <div class="card-body">
          <h5 class="card-title"><%= job.name %></h5>
          <p class="card-text"><%= job.experience %> years expreience is required</p>
          <p class="card-text"><%= job.salary %></p></p>
          <% if current_user %>
                <% if @role == "regularuser" %>
                    <%= link_to "Apply", job , class:'btn btn-primary'  %>
                <% else %>
                    <%= link_to "explore", job , class:'btn btn-primary'  %>
                 <% end %>
             <% else %>  
          <%= link_to "sign in to apply", new_user_session_path , class:'btn btn-primary'  %>
          <% end %>
        </div>
       </div>
    </div>
 </div>
<% end %>
</ul>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/Primer/10.8.1/build.css" />