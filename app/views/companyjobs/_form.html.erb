<%= image_tag @job.avatar if @job.avatar.attached? %>
<div class ="form-box">
  <h1>create a new job</h1>
  <p>Using <a href="https://getbootstrap.com">Bootstrap</a> and <a href="https://www.formbucket.com">FormBucket</a></p>
<%= form_with model: job do |form| %>
  <div class="form-group" >
    <%= form.label :name %><br>
    <%= form.text_field :name,{:class => 'form-control'} %>
  </div>
  <div class="form-group" >
    <%= form.label :experience %><br>
    <%= form.text_field :experience,{:class => 'form-control'} %>
  </div>
  <div class="form-group" >
    <%= form.label :salary %><br>
    <%= form.text_field :salary,{:class => 'form-control'} %>
  </div>
  <div class="form-group" >
    <%= form.label :qualification %><br>
    <%= form.text_field :qualification,{:class => 'form-control'} %>
  </div>
   <div class="form-group" >
    <%= form.label :skills %><br>
    <%= form.text_field :skills,{:class => 'form-control'}%> 
  </div>
   <div class="form-group" >
    <%= form.label :"profile-photo" %><br>
    <%= form.file_field :avatar,{:class => 'form-control'}%> 
  </div>
  <div class="form-group" >
     <%= form.label :"description" %><br>
    <%= form.text_field :description,{:class => 'form-control'}%> 
  </div>
 
  <div class="form-group" >
    <%= form.submit %>
  </div>
<% end %>
</div>
